<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.CityActivity"
    tools:showIn="@layout/activity_city">

    <include layout="@layout/top_layout"/>


    <ViewFlipper android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"/>

        <FrameLayout
            android:id="@+id/center_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2f8c45">

                <TextView
                    android:id="@+id/city_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="sans-serif-light"
                    android:padding="8dp"
                    android:text="MalmÃ¶"
                    android:textColor="#fff"
                    android:textSize="26sp"
                    android:transitionName="@string/textview_transition"/>
            </FrameLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:padding="12dp"
                android:text="Today"
                android:textSize="28sp"/>


            <include layout="@layout/weather_data_row"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:padding="12dp"
                android:text="Tomorrow"
                android:textSize="28sp"/>

            <include layout="@layout/weather_data_row"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:padding="12dp"
                android:text="The day after tomorrow"
                android:textSize="28sp"/>

            <include layout="@layout/weather_data_row"/>
        </FrameLayout>
    </ViewFlipper>
</LinearLayout>
